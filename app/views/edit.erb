<h1>Edit</h1>
<form action="/posts/<%= @post.id %>" method="post">
  <input type="hidden" id="hidden" name="_method" value="patch">

  <p>Name: <input type="text" name="name" placeholder="<%= @post.name %>"></p>
  <p>Content: <input type="text" name="content" placeholder="<%= @post.content %>"></p>
  <input type="submit" value="submit">
</form>